{
	"name": "twvr",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"author": {
		"email": "contact@anikd.com",
		"name": "Anik Das",
		"url": "https://github.com/sadn1ck/twvr"
	},
	"bugs": {
		"url": "https://github.com/sadn1ck/twvr/issues"
	},
	"description": "a vite/react/tailwind template",
	"license": "MIT",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"typecheck": "tsc -p . --noEmit",
		"lint": "pnpm biome check --apply-unsafe ./",
		"fmt": "pnpm biome format ./ --write",
		"prepare": "ln ./scripts/pre-commit ./.git/hooks/pre-commit",
		"clean": "rm -rf ./dist; rm ./.git/hooks/pre-commit"
	},
	"dependencies": {
		"clsx": "^2.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwind-merge": "^1.14.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.2.2",
		"@types/node": "^20.6.3",
		"@types/react": "^18.2.15",
		"@types/react-dom": "^18.2.7",
		"@vitejs/plugin-react-swc": "^3.3.2",
		"autoprefixer": "^10.4.16",
		"postcss": "^8.4.30",
		"tailwindcss": "^3.3.3",
		"typescript": "^5.0.2",
		"vite": "^4.4.5"
	}
}
